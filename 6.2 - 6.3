class Rectangle:
    """ Klasa reprezentująca prostokąt na płaszczyźnie"""
    def __init__(self, x1, y1, x2, y2):
        self.pt1 = Point(x1, y1)
        self.pt2 = Point(x2, y2)

    def __str__(self):
        return f"({self.pt1.x}, {self.pt1.y}, {self.pt2.x}, {self.pt2.y})"
    
    def __repr__(self):
        return f"Rectangle({self.pt1.x}, {self.pt1.y}, {self.pt2.x}, {self.pt2.y})"
    
    def __eq__(self, other):
        return ([self.pt1, self.pt2]) == ([other.pt1, other.pt2])
    
    def __ne__(self, other):
        return not self == other
    
    def center(self, x3 = 0, y3 = 0):
        x3 = self.pt1.x + (self.pt2.x - self.pt1.x) / 2
        y3 = self.pt1.y + (self.pt2.y - self.pt1.y) / 2
        return Point(x3, y3)
    
    def area(self, S = 0):
        S = (self. pt2.x - self.pt1.x) * (self.pt2.y - self.pt1.y)  # S = ab
        return S

    def move(self, x = 0, y = 0):
        self.pt1 = Point(self.pt1.x + x, self.pt1.y + y)
        self.pt2 = Point(self.pt2.x + x, self.pt2.y + y)

class TestRectangle(unittest.TestCase):

    
    def test_center(self):
        rect = Rectangle(0, 0, 6, 4)
        center = rect.center()
        self.assertEqual(center, Point(3, 2))

    def test_area(self):
        rect = Rectangle(0, 0, 6, 4)
        area = rect.area()
        self.assertEqual(area, 24)

    def test_move(self):
        rect = Rectangle(0, 0, 6, 4)
        rect.move(1, 2)
        self.assertEqual(rect, Rectangle(1, 2, 7, 6))        

