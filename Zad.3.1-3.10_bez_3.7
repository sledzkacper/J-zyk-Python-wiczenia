roman = input("Podaj liczbę rzymską: ")
def roman2int(roman):
    słownik = {"I": 1, "V": 5, "X": 10, "L": 50, "C": 100, "D": 500, "M": 1000}
    suma = 0
    poprzednia_wartość = 0

    for item in reversed(roman):
        wartość = słownik[item]
        if wartość < poprzednia_wartość:
            suma -=wartość
        else:
            suma += wartość

        poprzednia_wartość=wartość

    return suma

